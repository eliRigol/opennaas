<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
	<!-- Factory that creates Connections capabilities -->
	<bean id="connectionsCapabilityFactory" class="org.opennaas.extensions.roadm.capability.connections.ConnectionsCapabilityFactory">
		<property name="type" value="connections"/>
	</bean>
	<!-- Register the Service as an OSGi Service -->
	<service ref="connectionsCapabilityFactory" interface="org.opennaas.core.resources.capability.ICapabilityFactory">
		<service-properties>
			<!--  TODO it is necessary to use two parameters to get capability -->
			<entry key="capability" value="connections"/>
			<entry key="capability.model" value="proteus"/>
			<entry key="capability.version" value="1.0"/>
		</service-properties>
	</service>
	
	<!-- - Factory that creates Monitoring capability -->
	<bean id="monitoringCapabilityFactory" class="org.opennaas.extensions.roadm.capability.monitoring.MonitoringCapabilityFactory">
		<property name="type" value="monitoring"/>
	</bean>
	<!-- Command completers -->
	<!-- Register the Service as an OSGi Service -->
	<service ref="monitoringCapabilityFactory" interface="org.opennaas.core.resources.capability.ICapabilityFactory">
		<service-properties>
			<!--  TODO it is necessary to use two parameters to get capability -->
			<entry key="capability" value="monitoring"/>
			<entry key="capability.model" value="proteus"/>
			<entry key="capability.version" value="1.0"/>
		</service-properties>
	</service>
	
	<!-- Command completers -->
	<reference id="resourceNameCompleter" interface="org.apache.karaf.shell.console.Completer" filter="(completer.name=resourceNameCompleter)"/>
	
	<!-- Provide commands to the Karaf shell -->
	<command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
		<!-- Connections capability -->	
		<command name="connections/list">
			<action class="org.opennaas.extensions.roadm.capability.connections.shell.ListConnectionsCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="connections/getInventory">
			<action class="org.opennaas.extensions.roadm.capability.connections.shell.GetInventoryCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="connections/makeConnection">
			<action class="org.opennaas.extensions.roadm.capability.connections.shell.MakeConnectionCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="connections/removeConnection">
			<action class="org.opennaas.extensions.roadm.capability.connections.shell.RemoveConnectionCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		<command name="connections/getChannels">
			<action class="org.opennaas.extensions.roadm.capability.connections.shell.GetChannelsCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers>
		</command>
		
		<!-- Monitoring capability -->
		<command name="alarm/list">
			<action class="org.opennaas.extensions.roadm.capability.monitoring.shell.ListAlarmsCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers> 
		</command>
		<command name="alarm/clear">
			<action class="org.opennaas.extensions.roadm.capability.monitoring.shell.ClearAlarmsCommand"/>
			<completers>
				<ref component-id="resourceNameCompleter"/>
				<null/>
			</completers> 
		</command>
	</command-bundle>
	
	<!-- Roadm Repository bean ids and services ...Start-->
	<!-- Build the bootstrapper -->
	<bean id="roadmBootstrapperFactory" class="org.opennaas.extensions.roadm.repository.ROADMBootstrapperFactory"/>
	<!-- Get capability factories from the OSGi registry -->
	<!--
		<reference-list id="capabilityFactory"
		interface="org.opennaas.core.resources.capability.ICapabilityFactory"
		availability="mandatory"> <reference-listener
		ref="mantychoreRepository" bind-method="capabilityFactoryAdded"
		unbind-method="capabilityFactoryDeleted" /> </reference-list>
	-->
	<reference id="queueCapabilityFactory" interface="org.opennaas.core.resources.capability.ICapabilityFactory" filter="(&amp;(capability=queue)(capability.model=junos))"/>
	
    <bean id="resourceDescriptorRepository"
          class="org.opennaas.core.resources.descriptor.ResourceDescriptorRepository"
          init-method="initializeEntityManager" destroy-method="close">
         <property name="persistenceUnit" value="ResourceCore"/>
    </bean>
	<bean id="ROADMRepository" class="org.opennaas.extensions.roadm.repository.ROADMRepository" init-method="init">
		<argument value="roadm"/>
		<!-- resourceType -->
		<property name="capabilityFactories">
			<map>
				<entry key="queue" value-ref="queueCapabilityFactory"/>
				<entry key="connections" value-ref="connectionsCapabilityFactory"/>
				<entry key="monitoring" value-ref="monitoringCapabilityFactory"/>
			</map>
		</property>
		<property name="resourceBootstrapperFactory" ref="roadmBootstrapperFactory"/>
		<property name="resourceDescriptorRepository" ref="resourceDescriptorRepository"/>
	</bean>
	<service ref="ROADMRepository" interface="org.opennaas.core.resources.IResourceRepository">
		<service-properties>
			<entry key="type" value="roadm"/>
			<entry key="version" value="1.0"/>
		</service-properties>
	</service>
	<!-- Forces this bundle to wait for dataSourceResources being published -->
	<reference id="dataSourceResources" interface="javax.sql.DataSource" filter="(osgi.jndi.service.name=jdbc/opennaas-resources)"/>
	<!-- Roadm Repository bean ids and services ...End-->
	
</blueprint>
